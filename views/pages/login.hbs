<div class="signup-form">
    <form action='/login' method='POST'>
		<h2>Login</h2>
		<div class="form-group">
        	<input type="email" class="form-control input-lg email" name="email" placeholder="Email Address">
        </div>
		<div class="form-group">
            <input type="password" class="form-control input-lg passwd" name="password" placeholder="Password">
            
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success btn-lg btn-block signup-btn">Login</button>
        </div>
    </form>
</div>